document.addEventListener('readystatechange', event => { 
          if (event.target.readyState === "interactive") {
            const options = Array.apply(null, document.getElementById('tipoDeAjuste'))
            options.forEach(option => {
              if(option.value === '<%= ajustes.tipoDeAjuste %>' ){
                option.setAttribute('selected','true')
                return
              }
            })
          }
        })
document.addEventListener('readystatechange', event => { 
    if (event.target.readyState === "interactive") {
      const options = Array.apply(null, document.getElementById('solicitacaoEscolha'))
      options.forEach(option => {
        if(option.value === '<%= ajustes.solicitacaoEscolha %>' ){
          option.setAttribute('selected','true')
          return
        }
      })
    }
})

document.addEventListener('readystatechange', event => { 
    if (event.target.readyState === "interactive") {
