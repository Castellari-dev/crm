  <form action="/editar-ajuste" method="POST" >
      <div class="formulario"> 
      <div class="formArea">
      <div class="formContainer">
        <div class="form-row">

          <input type="hidden" name="id" id="id" value="<%= ajustes.id %>">

          <div>
            <select type="input" name="cliente_id" placeholder="Selecionar Cliente" id="nome" class="clientSearch">
              <option value="<%= ajustes.id %>" selected><%= ajustes.nome %></option>
          </select>
          </div>

          <div>
            <select name="unidadeConsumidora_id" placeholder="Selecionar Unidade Consumidora" id="unidadeConsumidora"  required="required" class="clientselect">
                <option value="<%= unidadeConsumidora.unidadeConsumidora %>"><%= unidadeConsumidora.unidadeConsumidora %></option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <select name="tipoDeAjuste" id="tipoDeAjuste" required>
            <option value="">Tipo de Ajuste</option>
            <option value="Aumento de demanda">Aumento de demanda</option> <!--- Trocar Essas opções pela função pra pegar do backend os clientes-->
            <option value="Redução de demanda">Redução de demanda</option>
            <option value="Opção Tarifaria">Opção Tarifaria</option>
          </select>
        </div>
        <div class="form-row">
          <textarea name="analise" id="analise" cols="30" rows="5" placeholder="Análise"><%= ajustes.analise %></textarea>
        </div>
        <div class="form-row">
          <textarea name="solicitacaoTexto" id="solicitacaoTexto" cols="30" rows="5" placeholder="Solicitação"><%= ajustes.solicitacaoTexto %></textarea></textarea>
        </div>
        <div class="form-row">
          <select name="solicitacaoEscolha" id="solicitacaoEscolha" required>
            <option value="">Solicitação</option>
            <option value="Equatorial">Equatorial</option> <!--- Trocar Essas opções pela função pra pegar do backend os clientes-->
            <option value="Ouvidoria Equatorial">Ouvidoria Equatorial</option>
            <option value="Aneel">Aneel</option>
          </select>
        </div>
        <div class="form-row">
          <div class="form-row-3">
            <input 
            placeholder="Data da Solicitação" 
            name="dataDaSolicitacao" 
            type="text" 
            id="dataDaSolicitacao" 
            value="<%= ajustes.dataDaSolicitacao ? new Date(ajustes.dataDaSolicitacao).toISOString().substr(0, 10).split('-').reverse().join('/') : '' %>"
            onfocus="(this.type='date')"
            onchange="if (!this.value) {this.type='text'; this.value=''}"
            required
        />
          </div>
          <div class="form-row-3">
            <input placeholder="Protocolo Da Solicitação" type="text" id="protocoloDaSolicitacao" name="protocoloDaSolicitacao" value="<%= ajustes.protocoloDaSolicitacao %>">
          </div>
          <div class="form-row-3">
            <select name="statusDaSolicitacao" id="statusDaSolicitacao" required>
              <option value="">Status</option>
              <option value="Em análise">Em análise</option> 
              <option value="Concluída">Concluída</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <textarea name="conclusaoDaSolicitacao" id="conclusaoDaSolicitacao" cols="30" rows="5" placeholder="Conclusão da Solicitação"><%= ajustes.conclusaoDaSolicitacao %></textarea>
          </div>
        <div class="form-row">
          <input 
          placeholder="Data da conclusão" 
          name="dataDaConclusao" 
          type="text" 
          id="dataDaConclusao" 
          value="<%= ajustes.dataDaConclusao ? new Date(ajustes.dataDaConclusao).toISOString().substr(0, 10).split('-').reverse().join('/') : '' %>"
          onfocus="(this.type='date')"
          onchange="if (!this.value) {this.type='text'; this.value=''}"
          required
      />
      </div>

      <div class="buttonContainer">
        <button type="submit" class="editarButton">Editar</button>
      </div>

    
      </div>
    </div>
    
  </form>  
  <script>
    
const form = document.querySelector('form');

// Listen for submit event on the form
form.addEventListener('submit', () => {
const dateInput = document.getElementById("dataDaSolicitacao");
const dateValue = dateInput.value;

// Check if date value is not empty
if (dateValue) {
  const [day, month, year] = dateValue.split("/");
  const formattedDate = `${year}-${month.padStart(2, '0')}-${day.padStart(2, '0')}`;
  
  // Update the input field value with the formatted date
  dateInput.value = formattedDate;
}
});

// Listen for submit event on the form
form.addEventListener('submit', () => {
const dateInput = document.getElementById("dataDaConclusao");
const dateValue = dateInput.value;

// Check if date value is not empty
if (dateValue) {
  const [day, month, year] = dateValue.split("/");
  const formattedDate = `${year}-${month.padStart(2, '0')}-${day.padStart(2, '0')}`;
  
  // Update the input field value with the formatted date
  dateInput.value = formattedDate;
}
});
  </script>
