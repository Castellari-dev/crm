    <script>
         document.addEventListener('readystatechange', event => { 
    if (event.target.readyState === "interactive") {
      const options = Array.apply(null, document.getElementById('adicionalBandeiraPonta'))
      options.forEach(option => {
        if(option.value === '<%= analise.adicionalBandeiraPonta %>' ){
