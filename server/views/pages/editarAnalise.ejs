  <form action="/editar-Analise" method="POST" >
    <div class="formulario"> 
      <div class="addButtonDiv"><a href="/nova-analise" class="buttonLink"><button type="button" class="addNovoButton">Add Novo</button></a></div>

      <div class="formArea">
      <div class="formContainer">
        <div class="form-row">

          <input type="hidden" name="id" id="id" value="<%= analise.id %>">

          <div>
            <select type="input" name="cliente_id" placeholder="Selecionar CLiente" id="cliente_id" class="clientSearch">
              <option value="<%= client.id %>"><%= client.nome %></option>
            </select>
          </div>

          <div>
            <select name="unidadeConsumidora_id" placeholder="Selecionar Unidade Consumidora" id="unidadeConsumidora"  required="required" class="clientselect">
                <option value="<%= unidadeConsumidora.unidadeConsumidora %>"><%= unidadeConsumidora.unidadeConsumidora %></option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-row-3">
            <input 
                placeholder="Mês/Ano"
                name="mesAno"
                type="text"
                id="mesAno"
                value="<%= analise.mesAno ? new Date(analise.mesAno).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' }) : '' %>"
                onfocus="(this.type='month')"
                onchange="if (!this.value) {this.type='text'; this.value=''}"
                required
            />
          </div>
          <div class="form-row-3">
            <input type="text" id="valorInicial" placeholder="Valor Inicial" name="valorInicial" value="<%= analise.valorInicial %>"/>
          </div>

          <div class="form-row-3">
            <input type="text" id="valorFinal" placeholder="Valor Final" name="valorFinal" value="<%= analise.valorFinal %>"/>
          </div>
        </div>

        <div class="form-row">
          <div class="form-row-3">
            <input type="text" id="consumoPonta" placeholder="Consumo (Ponta)" name="consumoPonta" value="<%= analise.consumoPonta %>"/>
          </div>

          <div class="form-row-3">
            <input type="text" id="consumoForaPonta" placeholder="Consumo (Fora Ponta)" name="consumoForaPonta" value="<%= analise.consumoForaPonta %>"/>
